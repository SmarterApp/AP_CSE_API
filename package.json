{
  "name": "ap-cse-api",
  "version": "0.0.0",
  "description": "Express API for the Smarter Balanced Content Specification Explorer",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "build-maps": "tsc --sourceMap",
    "debug": "nodemon --legacy-watch --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/index.js",
    "dev": "concurrently -n w: npm:watch-*",
    "watch-ts": "tsc -w -p ./tsconfig.json",
    "watch-server": "nodemon --watch dist",
    "test": "jest",
    "test-ci": "jest --coverage --ci --runInBand",
    "coverage": "jest --coverage",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint -c ./tslint.json -p ./tsconfig.json --fix",
      "prettier --single-quote --print-width 100",
      "git add"
    ],
    "src/**/*.{js,json}": [
      "prettier --single-quote --print-width 100",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "output": "reports/jest/results.xml"
        }
      ]
    ],
    "testMatch": [
      "**/*.spec.+(ts)"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "mongodb": "^3.1.4",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "signale": "^1.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@osu-cass/tslint-config": "^1.3.0",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/faker": "^4.1.2",
    "@types/jest": "^23.3.1",
    "@types/mongodb": "^3.1.4",
    "@types/morgan": "^1.7.35",
    "@types/passport": "^0.4.6",
    "@types/passport-local": "^1.0.33",
    "@types/signale": "^1.2.0",
    "concurrently": "^3.6.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "faker": "^4.1.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.2",
    "jest-junit": "^5.1.0",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.4.0-beta",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/osu-cass/AP-CSE-PDF.git"
  },
  "author": "",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/osu-cass/AP-CSE-PDF/issues"
  },
  "homepage": "https://github.com/osu-cass/AP-CSE-PDF#readme"
}
